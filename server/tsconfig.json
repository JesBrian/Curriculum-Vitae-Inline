{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/*",
        "../types/*"
      ]
    },
    "lib": [
      "es2015",
      "es2017",
      "es2015.promise"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "./**/*",
    "../node_modules/@types/node/index.d.ts",
    "../node_modules/@types/koa/index.d.ts"
  ]
}